{% macro render_field(field) %}
    
    {{ field(**kwargs)|safe }}
    {% if field.errors %}
        <div class="alert alert-{{ category }} text-center m-lg-3 my-1 w-100">
            {% for error in form.field.errors %}
                <p>{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endmacro %}